<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.neslihanatalay.ibb_ecodation_javafx.controller.RegisterController">
    <top>
        <HBox spacing="10" padding="10">
            <ComboBox fx:id="languageSelectComboBox" promptText="Dil Seçiniz"
                style="-fx-font-weight: bold; -fx-padding: 8; -fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8;" />
        </HBox>
    </top>
</BorderPane>
<GridPane
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.neslihanatalay.ibb_ecodation_javafx.controller.RegisterController"
        alignment="center" hgap="10" vgap="10"
        style="-fx-padding: 20;">
    <Label text="Kullanıcı Adı:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <Label text="Şifre:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1" />
	
    <Label text="Kullanıcı Rol:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <ComboBox fx:id="roleField" GridPane.rowIndex="3" GridPane.columnIndex="1" />

    <Button text="Kayıt Ol" onAction="#register" GridPane.rowIndex="4" GridPane.columnIndex="1" />
</GridPane>
